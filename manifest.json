{
  "name": "Laquesis a/b test framework Chrome Extension",
  "version": "1.0",
  "description": "To help with tests in develop/Staging environment. With this extension, we can choose experiment to be forced in both Frontend/Backend (PHP)",
  "permissions": [
      "cookies",
      "<all_urls>",
      "http://*/*",
      "https://*/*",
      "activeTab",
      "declarativeContent",
      "storage"
  ],
  "background": {
      "scripts": ["js/background.js"],
      "persistent": false
  },
  "page_action": {
      "default_popup": "html/popup.html",
      "default_icon": {
          "16": "images/laquesis_logo_16.png",
          "32": "images/laquesis_logo_32.png",
          "48": "images/laquesis_logo_48.png",
          "128": "images/laquesis_logo_128.png"
    }
  },
  "icons": {
      "16": "images/laquesis_logo_16.png",
      "32": "images/laquesis_logo_32.png",
      "48": "images/laquesis_logo_48.png",
      "128": "images/laquesis_logo_128.png"
  },
  "manifest_version": 2
}